ts=$(date "+%s")
kubectl run mysql-client-$ts --rm --tty -i --restart='Never' --image docker.io/bitnami/mysql:8.2.0-debian-11-r0 --namespace db --env MYSQL_ROOT_PASSWORD=$(kubectl get secret --namespace db mysql -o jsonpath="{.data.mysql-root-password}" | base64 -d) --command -- bash -c 'mysql -h mysql.db.svc.cluster.local -uroot -p"$MYSQL_ROOT_PASSWORD"'
